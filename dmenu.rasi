* {
    background-color:      #1e1e1e;
    border-color:          #7f849c;
    text-color:           #7f849c;
    font:            "DejaVuSansM Nerd Font, Semibold";
}
window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    4px;
    children:   [ horibox ];
}
horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}
listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}
entry {
    expand:     false;
    width:      10em;
}
element {
    padding: 0px 2px;
}
element selected {
    background-color: #a6e3a1;
}

element-text, element-icon {
  background-color: inherit;
  text-color: inherit;
}
